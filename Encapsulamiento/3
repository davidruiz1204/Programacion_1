class Cuenta:
    def __init__(self, nombre):
        self.__usuarios = { "Natalia": 2705, "david": 1206,"duvan": 1131 }
        self.__usuario = None

        if nombre.lower() in self.__usuarios:
            self.__usuario = nombre.lower()
            print("Cuenta creada satisfactoriamente")
        else:
            print("Acceso Rechazado.")

    def mostrar_usuario(self):
        if self.__usuario:
            print(f" Usuario: {self.__usuario}")
        else:
            print("No hay un usuario v치lido.")

    def validar_contrase침a(self, contrase침a_ingresada):
        if not self.__usuario:
            print("No se puede validar contrase침a sin un usuario v치lido.")
            return

        contrase침a_correcta = self.__usuarios[self.__usuario]
        if contrase침a_ingresada == contrase침a_correcta:
            print(" Contrase침a correcta. Acceso concedido.")
        else:
            print(" Contrase침a incorrecta.")

# 游댳 Uso del programa
nombre = input("游녤 Ingresar tu nombre: ")
cuenta = Cuenta(nombre)

cuenta.mostrar_usuario()

contrase침a_input = input("Ingresar tu contrase침a (n칰mero): ")

if contrase침a_input.isdigit():
    contrase침a = int(contrase침a_input)
    cuenta.validar_contrase침a(contrase침a)
else:
    print("La contrase침a debe ser un n칰mero v치lido.")
